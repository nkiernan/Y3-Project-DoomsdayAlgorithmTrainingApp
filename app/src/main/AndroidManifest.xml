<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.mmu.project.doomsdayalgorithmtrainingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".PracticeSelection"
            android:label="@string/practice_mode_item" />
        <activity
            android:name=".StandardSelection"
            android:label="@string/standard_mode_item" />
        <activity
            android:name=".TutorialMode"
            android:label="@string/title_activity_tutorial_mode"
            android:parentActivityName=".PracticeSelection"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.ac.mmu.project.doomsdayalgorithmtrainingapp.PracticeSelection" />
        </activity>
    </application>

</manifest>